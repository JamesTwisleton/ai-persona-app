# AI Focus Groups - Test Environment Variables
# Used automatically when TESTING=1

# ============================================================================
# Application Settings
# ============================================================================
ENV=test
DEBUG=False
TESTING=1

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite in-memory for fast tests
DATABASE_URL=sqlite:///:memory:

# ============================================================================
# Authentication & Security
# ============================================================================
# Test JWT secret (not secure, only for testing)
JWT_SECRET=test-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Google OAuth (test credentials - not real)
GOOGLE_CLIENT_ID=test-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=test-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback/google
GOOGLE_SCOPES=openid email profile

# ============================================================================
# CORS Settings
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# AI Service Mock Responses
# ============================================================================
# No real API keys needed for tests - we use mocks

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=WARNING
