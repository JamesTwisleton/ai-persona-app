# AI Focus Groups - Test Environment Variables
# Used automatically when TESTING=1

# ============================================================================
# Application Settings
# ============================================================================
ENV=test
DEBUG=False
TESTING=1

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite in-memory for fast tests
DATABASE_URL=sqlite:///:memory:

# ============================================================================
# Authentication & Security
# ============================================================================
# Test JWT secret (not secure, only for testing)
JWT_SECRET=test-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Password hashing (lower rounds for faster tests)
BCRYPT_ROUNDS=4

# ============================================================================
# CORS Settings
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# AI Service Mock Responses
# ============================================================================
# No real API keys needed for tests - we use mocks

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=WARNING
